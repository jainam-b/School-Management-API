{
  "compilerOptions": {
    "target": "ES6",                      // or a version of JavaScript compatible with Node.js on Vercel
    "module": "commonjs",                 // Node.js uses CommonJS
    "rootDir": "src",                     // Source directory for TypeScript
    "outDir": "dist",                     // Output directory for compiled JavaScript
    "esModuleInterop": true,              // Compatibility for ES Modules
    "strict": true,                       // Enable all strict type-checking options
    "skipLibCheck": true,                 // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure consistent casing in file names
  },
  "include": ["src/**/*.ts"],             // Include all TypeScript files in src
  "exclude": ["node_modules", "dist"]     // Exclude node_modules and dist
}
